<Window x:Class="KML.DlgMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KML Message" Height="160" Width="320" Icon="/KML;component/Images/Astronaut.ico" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" MinWidth="320" MinHeight="160">
    <Grid>
        <TextBox x:Name="TextMessage" Text="This is a message" IsReadOnly="True" Margin="0,0,0,48" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="ButtonOk" Content="Ok" Height="48" VerticalAlignment="Bottom" Click="ButtonOk_Click" IsCancel="True" IsDefault="True"/>
    </Grid>
</Window>
